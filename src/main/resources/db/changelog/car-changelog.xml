<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="createTable_car_20240314" author="jurisitsm">
        <createTable tableName="car">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true" primaryKeyName="pk_car"/>
            </column>
            <column name="brand" type="varchar(255)"/>
            <column name="color" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="seedTable_car_20240314" author="jurisitsm">
        <loadData tableName="car" relativeToChangelogFile="true" file="../data/car.csv" separator=";"/>
    </changeSet>

</databaseChangeLog>